<h2>Edit Pokemon</h2>

<form action="/pokemons/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name</label>
  <input type="text" name="pokemon[name]" value="<%= @pokemon.name %>">

  <label>CP</label>
  <input type="text" name="pokemon[cp]"  value="<%= @pokemon.cp %>">

  <label>Poke Type</label>
  <input type="number" name="pokemon[poke_type]" value="<%= @pokemon.poke_type %>">

  <button type="submit">Submit</button>
</form>
